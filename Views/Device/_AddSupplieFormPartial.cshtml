<div class="row" id="divAddSupplieContent">
    <div class="col-12">
        <div class="card card-info card-outline collapsed-card">
            <div class="card-header">
                <h3 class="card-title"><b>Bảng các thành phần thiết bị</b></h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="trouble-supplie-table" class="table table-bordered table-hover">
                </table>
            </div>
            <!-- /.card-body -->
            <div class="card-footer card-outline">
                <div id="divAddSupplie" style="width:100%; display:none;">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="Origin">Chọn thành phần (vật tư)</label>
                                <select placeholder="Chọn vật tư" id="selectSupplie" name="selectSupplie"
                                        class="form-control-sm select2 select2-info" data-dropdown-css-class="select2-info"
                                        style="width: 99%;"></select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <label for="Origin">Số lượng thành phần trong thiết bị</label>
                            <div class="form-group"><input min="1" max="100" type="number" id="Quantity" class="form-control" name="Quantity"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <label for="Origin">Mô tả thành phần</label>
                            <div class="form-group"><input type="text" id="DSDescription" class="form-control" name="DSDescription"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12" style="text-align:center;">
                            <button type="button" class="btn btn-danger" onclick="ClearFooterTableSupplie()">Delete</button>
                            <button type="button" class="btn btn-outline-info" onclick="SaveDeviceSupplie()">
                                <i class="far fa-save"></i>&nbsp;Lưu
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>